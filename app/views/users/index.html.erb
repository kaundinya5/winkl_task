
<div style="position: absolute;width: 100%;height: 100%;left: 0;top: 0;background: #1f1e1e;">
  <nav style="height: 7%;display: flex">
    <p style="margin: auto;font-size: 20px;color: white;">Winkl</p>
  </nav>
  <section style="height: 93%;background: #f7f3f3;">
    <div class="row h-100-percent " style="margin: 0">
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 right-black-border h-100-percent ">
        <div class="div-title">
          <h4>Filters</h4>
          <button class="btn btn-default" onclick=WINKL.Filters.apply() > Apply</button>
          <button class="btn btn-default" onclick="$('input[type=radio]:checked').prop('checked', false);$('#js-users-profiles-result').empty();"> Reset</button>
        </div>

        <div class="filters-div">
          <div class="row individual-filter">
            <h6>Email Present?</h6>
            <label class="radio-inline"><input type="radio" name="emailPresent" value="yes">Yes</label>
            <label class="radio-inline"><input type="radio" name="emailPresent" value="no">No</label>
          </div>
          <div class="row individual-filter">
            <h6>Number of followers</h6>
            <label class="radio-inline"><input type="radio" name="followers" value="<500"><500</label>
            <label class="radio-inline"><input type="radio" name="followers" value="<1k">500-1k</label>
            <label class="radio-inline"><input type="radio" name="followers" value="<5k">1k-5k</label>
            <label class="radio-inline"><input type="radio" name="followers" value="<20k">5k-20k</label>
            <label class="radio-inline"><input type="radio" name="followers" value="<100k">20k-100k</label>
            <label class="radio-inline"><input type="radio" name="followers" value=">100k">>100k</label>
          </div>
          <div class="row individual-filter">
            <h6>Followers to following ratio</h6>
            <label class="radio-inline"><input type="radio" name="ratio" value="<5">1-5</label>
            <label class="radio-inline"><input type="radio" name="ratio" value="<10">5-10</label>
            <label class="radio-inline"><input type="radio" name="ratio" value="<1"><1</label>
            <label class="radio-inline"><input type="radio" name="ratio" value="<0"><0</label>
          </div>
          <div class="row individual-filter">
            <h6>Number of posts</h6>
            <label class="radio-inline"><input type="radio" name="posts" value=">1k">>1k</label>
            <label class="radio-inline"><input type="radio" name="posts" value="<1k">100-1k</label>
            <label class="radio-inline"><input type="radio" name="posts" value="<100"><100</label>
          </div>
          <div class="row individual-filter">
            <h6>Average Engagement</h6>
            <label class="radio-inline"><input type="radio" name="avgeng" value=">10%">>10%</label>
            <label class="radio-inline"><input type="radio" name="avgeng" value="<10%">5-10%</label>
            <label class="radio-inline"><input type="radio" name="avgeng" value="<5%">1-5%</label>
            <label class="radio-inline"><input type="radio" name="avgeng" value="<1%"><1%></label>
          </div>
          <div class="row individual-filter">
            <h6>Is a Winkl blogger</h6>
            <label class="radio-inline"><input type="radio" name="winkl" value="yes">Yes</label>
            <label class="radio-inline"><input type="radio" name="winkl" value="no">No</label>
          </div>
        </div>

      </div>
      <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 h-100-percent">
        <div class="div-title">
          <h4 >Users</h4>
          <button class="btn btn-default "> Download CSV</button>
        </div>
        <div class="user-profiles" id="js-users-profiles-result">
        </div>
      </div>
    </div>
  </section>
</div>
